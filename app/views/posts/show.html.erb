<%= render 'layouts/nav' %>

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image:url('<%= @post.image.url %>')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="page-heading">
                    <h1><%= @post.ruta %></h1>
                    <hr class="small">
                    <span class="subheading">Por <%= @post.creador %></span>
                </div>
            </div>
        </div>
    </div>
</header>


    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

        
                <div class="post-preview">

                        <h3>Año de la expedicion</h3>
                        <%= @post.año %>
                        
                        <h3>Datos del camino</h3>
                        <%= @post.spot %>

                        <h3>Peligros</h3>
                        <%= @post.peligro %>

                    
                        <p class="post-subtitle">
                            <h2>Historia del viaje</h2> <br> <%= @post.historia %>
                        </p>

<!--                         <h3>Galeria de imagenes</h3>
                        <%= image_tag @post.image.url(:medium) %>
                    <p class="post-meta">Por <a href="#"><%= @post.creador %></a></p> -->
                </div>

                <section class="no-padding" id="portfolio">
                    <div class="container-fluid">
                        <div class="row no-gutter">
                            <% @post.assets do |post| %>
                            <div class="col-lg-4 col-sm-6">
                                <a href="#" class="portfolio-box">
                                    <%= image_tag post.image.url(:medium) %>
                                    <div class="portfolio-box-caption">
                                        <div class="portfolio-box-caption-content">
                                            <div class="project-category text-faded">
                                                
                                            </div>
                                            <div class="project-name">
                                                
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <% end %>
                        </div>
                    </div>
                </section>

                <%= link_to "Editar", edit_post_path %>



                <hr>
  
                <h4><%= @post.comments.count %> Comments</h4>
                <div class="panel panel-default">
                  <div class="panel-heading"></div>
                  <div class="panel-body">
                    <p><%= render @post.comments %></p>
                  </div>
                </div>

                    

                <h3>Add a comment</h3>
                    <%= render "comments/form" %>


                <%= link_to 'Edit', edit_post_path(@post) %> |
                <%= link_to 'Back', root_path %>
            </div>
        </div>
    </div>
